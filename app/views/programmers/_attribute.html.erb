
<%= link_to '<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>'.html_safe, root_path %>
<h3>
  <%= name %> | <%= formatted_date(birth_date) %> - <%= formatted_date(death_date) %>
</h3>
<div class="row jumbotron">
  <div class="col-md-3">
    <%= image_tag image, height: '250px', class:"profile-image" %>
  </div>
  <div class="col-md-9 programmer-info">
    <p>
      <strong>Home Country:</strong> <%= home_country %><br>
    </p>
    <p>
      <strong>Quote:</strong> <%= quote %><br>
    </p>
    <p>
      <strong>Claim To Fame:</strong> <%= claim_to_fame %>
    </p>
    <p>
      <%= link_to "Learn more about #{name}", wikipedia_page, target: '_blank' %>
    </p>
  </div>
</div>